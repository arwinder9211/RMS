@model RMS.Models.Dish
@{
    ViewData["Title"] = "CreateDish";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create A Dish</h2>
<h3 class="text-success">@ViewBag.Msg</h3>
<h3 class="text-danger">@ViewBag.Error</h3>

<h4>Enter Dish Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDish">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Restaurant</label>
                <select class="form-control" name="RestaurantId">
                    <option selected disabled>Select a restaurant</option>
                    @foreach (var item in (List<Restaurant>)ViewBag.Restaurants)
                    {
                        <option value="@item.Id">@item.Id  - @item.Name</option>
                    }
                </select>
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dishes">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
