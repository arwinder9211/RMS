@model IEnumerable<RMS.Models.Restaurant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Restaurants</h2>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayName("Address")
            </th>
            <th>
                @Html.DisplayName("City")
            </th>
            <th>
                @Html.DisplayName("Country")
            </th>
            <th>
                @Html.DisplayName("Postal Code")
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @item.Addresses.First().Street
            </td>
            <td>
                @item.Addresses.First().City
            </td>
            <td>
                @item.Addresses.First().Country
            </td>
            <td>
                @item.Addresses.First().PostalCode
            </td>
            <td>
                @Html.ActionLink("Dishes", "DishesOfRestaurant", new {  id=item.Id }) |
                @*@Html.ActionLink("Details", "DetailsRest", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteRest", new {  id=item.Id })*@
            </td>
        </tr>
}
    </tbody>
</table>
